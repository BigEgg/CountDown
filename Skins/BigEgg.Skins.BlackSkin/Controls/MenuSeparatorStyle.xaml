<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Resource dictionary entries should be defined here. -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MenuSeparatorStyle" TargetType="{x:Type Separator}">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Margin" Value="2"/>
		<Setter Property="Focusable" Value="false"/>
        <Setter Property="Template" Value="{DynamicResource {ComponentResourceKey ResourceId=MenuSeparatorTemplate, TypeInTargetAssembly={x:Type Separator}}}"/>
	</Style>

    <ControlTemplate x:Key="{ComponentResourceKey ResourceId=MenuSeparatorTemplate, TypeInTargetAssembly={x:Type Separator}}" TargetType="{x:Type Separator}">
        <Rectangle Height="1" StrokeThickness="1">
        	<Rectangle.Stroke>
				<SolidColorBrush Color="{StaticResource Application_Menu_Foreground_Disabled}"/>
			</Rectangle.Stroke>
		</Rectangle>
	</ControlTemplate>

</ResourceDictionary>