<Window x:Class="CountDown.Presentation.Views.Dialog.AlertDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:CountDown.Presentation.Properties"
		WindowStartupLocation="CenterOwner"
        Title="{Binding Title}" Height="300" Width="300" WindowStyle="ToolWindow">
    <Grid Margin="10">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="25"/>
    		<RowDefinition Height="*"/>
    		<RowDefinition Height="30"/>
    	</Grid.RowDefinitions>
    	<ListBox Margin="0" Grid.Row="1"/>
    	<TextBlock HorizontalAlignment="Left" Margin="0,0,0,3" Text="{x:Static p:Resources.AlertList}" VerticalAlignment="Bottom"/>
    	<Button Content="{x:Static p:Resources.IKnowIt}" Margin="0" Grid.Row="2" Width="75" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        
    </Grid>
</Window>
